<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/day6concert_backgroud"
    android:layout_margin="5dp"
    android:padding="8dp"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/text_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="09/07/20"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="450dp"
        android:textSize="25dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/text_today"
        android:layout_marginHorizontal="100dp"/>


    <TextView
        android:id="@+id/text_label_days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_today"
        android:layout_centerHorizontal="true"
        android:text="@string/dias_restante"
        android:textColor="@color/colorPrimary"
        android:layout_above="@id/button"
        android:layout_marginTop="30dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/text_days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_label_days_left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-45dp"
        android:text="365"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_marginHorizontal="170dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>